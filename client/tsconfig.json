{
  "compilerOptions": {
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es7", "dom"],
    "module": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es5",
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "bundles/*": ["app/bundles/*"],
      "styleguide/*": ["app/styleguide/*"],
      "lib/*": ["app/lib/*"]
    }
  },
  "include": [
    "./"
  ],
  "exclude": ["**/*.spec.ts", "node_modules", "vendor", "public"],
  "compileOnSave": false
}