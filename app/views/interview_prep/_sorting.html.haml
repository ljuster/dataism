#ajax-modal.modal.hide.fade{:tabindex => "-1"}
.modal-body
  .modal-body-content
  .ajax-loader
    %h1 Sorting
    %img{:src=> asset_path('sorting.png'), :alt=>"Card image cap", :style=>"max-width:300px;max-height:4000px"}
    %p
    %table.table-bordered
      %thead
        %tr
          %th{colspan: 16, style: "text-align: center"} Random numbers
      %tbody
        %tr
        - @arr["vals"].each do |num|
          %td #{num}
      - if !@arr["sorted"].nil?
        %tr
        - @arr["sorted"].each do |num|
          %td #{num}
        %tr
          %td #{@arr["runtime"]}

    %p.button.btn.btn-lg.btn-default=link_to 'Sort Numbers', new_algorithm_path(algorithm: 'quickSort', arr: @arr)
.modal-footer
  %button.btn{"data-dismiss" => "modal", :type => "button"} Close