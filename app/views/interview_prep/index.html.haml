.container
  %h1 Knowledge Regions
  .modal-header
  %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button"} &times;
  %h3.modal-title.button.btn.btn-lg.btn-warning=link_to 'Check Palindrome', new_algorithm_path(algorithm: 'palindrome')
  %button.btn#myBtn{:type => "button"} Compute nth fibonnaci number
  #myModal.modal.modal-dialog
    .modal-content
      = form_for @algorithm do |f|
        = f.number_field :input, min: 1, max: 100
        = f.hidden_field :name, :value => "fibonacci"
        = f.submit 'Calculate'
  = render 'interview_prep/sorting'
  = render 'interview_prep/bigO'
  = render 'interview_prep/ooDesign'



:javascript
  var modal = document.getElementById('myModal');

  var btn = document.getElementById("myBtn");

  var span = document.getElementsByClassName("close")[0];

  btn.onclick = function() {
    modal.style.display = "block";
  }

  span.onclick = function() {
    modal.style.display = "none";
  }

  window.onclick = function(event) {
    if (event.target == modal) {
      modal.style.display = "none";
    }
    }
