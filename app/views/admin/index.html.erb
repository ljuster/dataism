<div class="container">
  <p class="notice">
    = notice
  </p>

  <h1>User List</h1>

  <table class="table-bordered">
    <thead>
      <tr>
        <th colspan ="3"> Name</th>
        <th colspan ="3"> Email</th>
        <th colspan ="3"> Paid for Season</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td colspan="3" ><%= @user.name %></td>
          <td colspan="3" ><%= @user.email %></td>
          <td colspan="3" ><%= @user.total_paid %></td>
          <td colspan="3" ><%= link_to 'Show', @user %></td>
          <td colspan="3" ><%= link_to 'Edit', edit_user_path(@user) %></td>
          <td colspan="3" ><%= link_to 'Destroy', @user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br/>

  = link_to 'New User', new_user_path
</div>