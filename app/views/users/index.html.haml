.container
  %p.notice
    = notice

  %h1 Listing Purchases

  %table
    %thead
      %tr
        %th{:colspan => 3} Name
        %th{:colspan => 3} Email
        %th{:colspan => 3} Description
        %th{:colspan => 3} Image
        %th{:colspan => 3} Purchase date

    %tbody
      - @purchases.each do |purchase|
        %tr
          %td{:colspan => 3}
            = purchase.name
          %td{:colspan => 3}
            = purchase.email
          %td{:colspan => 3}
            = purchase.description
          %td{:colspan => 3}
            = purchase.image
          %td{:colspan => 3}
            = purchase.purchase_date
          %td{:colspan => 3}
            = link_to 'Show', purchase
          %td{:colspan => 3}
            = link_to 'Edit', edit_purchase_path(purchase)
          %td{:colspan => 3}
            = link_to 'Destroy', purchase, method: :delete, data: { confirm: 'Are you sure?' }

  %br

  = link_to 'New Purchase', new_purchase_path
