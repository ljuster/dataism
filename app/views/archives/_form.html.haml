= form_for @archive do |f|
  - if @archive.errors.any?
    #error_explanation
      %h2= "#{pluralize(@archive.errors.count, "error")} prohibited this archive from being saved:"
      %ul
        - @archive.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :count
    = f.number_field :count
  .field
    = f.label :before
    = f.datetime_select :before
  .field
    = f.label :after
    = f.datetime_select :after
  .actions
    = f.submit 'Save'
